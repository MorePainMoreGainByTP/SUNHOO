<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chuang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/chuang"
                android:gravity="center"
                android:text="床" />

            <TextView
                android:id="@+id/gui_zi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/gui_zi"
                android:gravity="center"
                android:text="柜子" />

            <TextView
                android:id="@+id/zhuo_zi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/zhuo_zi"
                android:gravity="center"
                android:text="桌子" />
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yi_zi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/yi_zi"
                android:gravity="center"
                android:text="椅子" />

            <TextView
                android:id="@+id/sha_fa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/sha_fa"
                android:gravity="center"
                android:text="沙发" />

            <TextView
                android:id="@+id/chuang_dian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/chuang_dian"
                android:gravity="center"
                android:text="床垫" />
        </TableRow>
    </TableLayout>
</LinearLayout>